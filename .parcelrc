{
    "extends": "@parcel/config-default",
    "packagers": {
        "default": {
            "alias": {
                "@components": "./src/components",
                "@assets": "./src/assets",
                "@blocks": "./src/blocks",
                "@layouts": "./src/layouts",
                "@mock": "./src/mock",
                "@pages": "./src/pages",
                "@types": "./src/types",
                "@utils": "./src/utils"
            }
        }
    },
    "transformers": {
        "*.hbs": [
            "@anikin/parcel-transformer-handlebars-precompile"
        ],
        "*.{ts}": [
            "@parcel/transformer-typescript-tsc"
        ],
        "*.{sass,scss}": [
            "@parcel/transformer-sass"
        ]
    }
}
