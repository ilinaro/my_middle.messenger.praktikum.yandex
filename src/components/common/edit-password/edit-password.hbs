<div class="edit-password">
    <div class="edit-password-photo">
        {{> PhotoSVG}}
    </div>
    <div class="f-title-bold edit-password-username">{{user.display_name}}</div>
    <div class="form__edit f-normal">
        <div class="form__edit_row">
            <div>Старый пароль</div>
            {{> InputProfile 
                idInput="oldPassword" 
                typeInput="password"
                inputName="oldPassword"
                placeholderInput="•••••••••••" 
                value=""
            }}
        </div>
        <div class="form__edit_row">
            <div>Новый пароль</div>
            {{> InputProfile 
                idInput="newPassword" 
                typeInput="password"
                inputName="newPassword"
                placeholderInput="•••••••••••" 
                value=""
            }}
        </div>
        <div class="form__edit_row">
            <div>Повторите новый пароль</div>
            {{> InputProfile 
                idInput="newPasswordTwo" 
                typeInput="password"
                inputName="newPasswordTwo"
                placeholderInput="•••••••••••"
                value=""
            }}
        </div>
    </div>
    {{> Button label="Сохранить" onClick="goToPage('profile')"}}
</div>